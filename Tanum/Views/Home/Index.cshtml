@model Tanum.ProjektService.CaseData
@{
    ViewBag.Title = "Form";
}

<h2 class="m-2"></h2>
<div class="container-fluid row m-0">
    <div class="container col col-4">
        <form>
            <div class="mb-3 ">
                <label for="select-category">Välj kategori: </label>
                <select id="select-category" class="custom-select">
                    <option selected>Gatulampor</option>
                    <option>Skyltar</option>
                    <option>Bänkar</option>
                </select>
            </div>
            <div class="my-3">
                <label for="position-input">Adress</label>
                <div class="input-group">
                    <input id="position-input" class="form-control" type="text" />
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" id="position-btn">Välj</button>
                    </div>
                </div>
            </div>
            <div class="my-3 w-100">
                <label for="desc-input">Beskrivning</label>
                <textarea id="desc-input" class="form-control w-100" type="text"> </textarea>
            </div>
            <div class="my-3">
                <label for="img-input">Bild</label>
                <div class="input-group w-100">
                    <input id="img-input" class="form-control" type="text" />
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" id="img-btn">Ladda up</button>
                    </div>
                </div>
            </div>
            <div class="my-3 w-100">
                <label for="phone-input">Telefon</label>
                <input id="phone-input" class="form-control w-100" type="number" />
            </div>
            <div class="my-3 w-100">
                <label for="email-input">Epost</label>
                <input id="email-input" class="form-control w-100" type="text" />
            </div>
            <div class="my-3">
                <label for="select-follow">Följ ärendet genom: </label>
                <select id="select-follow" class="custom-select">
                    <option selected>Epost</option>
                    <option>Sms</option>
                </select>
            </div>
            <div class="my-3">
                <button id="submit-btn" class="btn btn-primary">Skicka in</button>
            </div>



        </form>

    </div>
    <div class="container col col-8">
        <div id="map">
        </div>
        <hr />
        <div class="my-2">
            <p> <img class="circle-svg" src="~/Content/circle-green.svg" /> = Nyligen avslutat ärende.</p>
            <p class="mb-3"> <img class="circle-svg" src="~/Content/circle-yellow.svg" /> = Aktivt Ärende.</p>
        </div>


    </div>
</div>

